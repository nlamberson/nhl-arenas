# Copy this file to .env and update with your values
# Command: cp .env.example .env
#
# This .env file is for Docker Compose
# Docker Compose will use these variables in docker-compose.yml

# Firebase Configuration
# Get this from Firebase Console -> Project Settings -> Project ID
FIREBASE_PROJECT_ID=<project-id>

# Database Configuration
# These are used by both the database container and the backend
POSTGRES_USER=<user>
POSTGRES_PASSWORD=<password>
POSTGRES_DB=nhl_arenas

# Generate a secure password with:
# macOS/Linux:  openssl rand -base64 32
# Windows:      -join ((48..57) + (65..90) + (97..122) | Get-Random -Count 32 | % {[char]$_})
#
# Note: Don't set DATABASE_URL here - it's auto-constructed in docker-compose.yml
